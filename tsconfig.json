{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2021",
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "skipLibCheck": true,
    "incremental": true,
    "paths": {
      "@/common/*": ["common/*"],
      "@/settings/*": ["settings/*"]
    }
  }
}
